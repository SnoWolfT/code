apiVersion: v1
kind: Pod
metadata:
  name: debugger-destinationNode
spec:
  containers:
  - name: debugger
    image: mcr.microsoft.com/dotnet/runtime-deps:6.0
    stdin: true
    securityContext:
      privileged: true
    volumeMounts:
    - name: host-root-volume
      mountPath: /host
  volumes:
  - name: host-root-volume
    hostPath:
      path: /
  hostNetwork: true
  hostPID: true
  restartPolicy: Always
  nodeName: destinationNode
